# WalletConnect Configuration
# Get this from https://cloud.walletconnect.com/
# Required for wallet connections and Web3 functionality
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# OpenAI Configuration
# Get this from https://platform.openai.com/api-keys
# Required for the chat functionality
OPENAI_API_KEY=

# Site Configuration
# The public URL of your site - update this for production
NEXT_PUBLIC_SITE_URL=https://aurabot.app

# Environment Configuration
# Options: development, production, test
NODE_ENV=development

# Optional Analytics Configuration
# Enable if you want to track site analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Optional: Rate Limiting Configuration
# Number of requests allowed per IP per minute
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000 